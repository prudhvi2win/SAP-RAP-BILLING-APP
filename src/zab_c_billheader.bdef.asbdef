projection;
strict ( 2 );
use draft;

define behavior for ZAB_C_BillHeader alias BillHeader
{
  use create;
  use update;
  use delete;

  use action Prepare;
  use action Edit;
  use action Resume;
  use action Activate;
  use action Discard;

  use association _item { create; with draft; }
}

define behavior for zab_c_bill_item
{
  use update;
  use delete;

  use association _header { with draft; }
}